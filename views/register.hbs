<div class="row mt-3">
  <div class="col-6 mx-auto">
    <div class="card">
      <div class="card-body">
        <h1 class="text-center fw-bold">Register</h1>
        {{> message}}
        <form action="/users/register" method="POST" class="fs-4">
          <div class="mb-3">
            <label for="name" class="form-label">User Name：</label>
            <input type="text" class="form-control" name="name" id="name" placeholder="your name" value="{{ name }}">
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">User Email：</label>
            <input type="text" class="form-control" name="email" id="email" placeholder="your email" value="{{ email }}">
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">User Password：</label>
            <input type="password" class="form-control" name="password" id="password" placeholder="your password here" value="{{ password }}">
          </div>
          <div class="mb-3">
            <label for="confirmPassword" class="form-label">Confirm Password：</label>
            <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="your password again" value="{{ confirmPassword }}">
          </div>
          <button type="submit" class="btn btn-warning col-12 my-3 fs-4">Register</button>
          <a href="/auth/facebook" class="btn btn-primary col-12 my-2 fs-5">Facebook Login</a>
          <a href="/auth/google" class="btn btn-info col-12 mb-2 fs-5">Google Login</a>
        </form>
        <p class="mt-2">Have An Account? <a href="/users/login">Login</a></p>
      </div>
    </div>
  </div>
</div>