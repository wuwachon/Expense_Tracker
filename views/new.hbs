<div class="row">
  <div class="col-6 mx-auto">
    <form action="/records" method="POST">
      <div class="mb-3 row">
        <label for="note" class="col-sm-3 col-form-label fs-5">*必填欄位</label>
        <div class="col-sm-9">
          <input type="text" readonly class="form-control-plaintext fs-4" id="note" value="請輸入你的支出">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="name" class="col-sm-3 col-form-label fs-3">名稱*：</label>
        <div class="col-sm-9">
          <input type="text" class="form-control fs-3" id="name" name="name">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="date" class="col-sm-3 col-form-label fs-3">日期*：</label>
        <div class="col-sm-9">
          <input type="date" class="form-control fs-3" id="date" name="date">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="category" class="col-sm-3 col-form-label fs-3">類別*：</label>
        <div class="col-sm-9">
          <select class="form-select form-select-lg fs-3" id="category" name="category" aria-label=".form-select-lg example">
            <option selected>類別</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
          </select>
        </div>
      </div>
      <div class="mb-3 row">
        <label for="amount" class="col-sm-3 col-form-label fs-3">金額*：</label>
        <div class="col-sm-9">
          <input type="number" min="0" class="form-control fs-3" id="amount" name="amount">
        </div>
      </div>
      <div class="mt-3 row">
        <span class="col-sm-3 col-form-label fs-3"></span>
        <div class="col-sm-9">
          <button type="submit" class="btn btn-outline-dark form-control fs-3">新增支出</button>
        </div>
        
      </div>
    </form>
  </div>
</div>